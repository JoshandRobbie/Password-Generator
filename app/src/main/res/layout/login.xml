<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#27C6DB">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivBalloon"
            android:src="@drawable/balloon"
            android:layout_above="@+id/number1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/number1"
            android:layout_alignTop="@+id/number2"
            android:layout_toLeftOf="@+id/number2"
            android:layout_toStartOf="@+id/number2"
            android:background="#27C6DB"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/number2"
            android:layout_above="@+id/number5"
            android:layout_toLeftOf="@+id/number6"
            android:layout_toStartOf="@+id/number6"
            android:background="#27C6DB"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/number3"
            android:layout_alignTop="@+id/number2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="58dp"
            android:layout_marginEnd="58dp"
            android:background="#27C6DB"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/number4"
            android:layout_alignTop="@+id/number5"
            android:layout_toLeftOf="@+id/number5"
            android:layout_toStartOf="@+id/number5"
            android:background="#27C6DB"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/number5"
            android:layout_alignTop="@+id/number6"
            android:layout_toLeftOf="@+id/number6"
            android:layout_toStartOf="@+id/number6"
            android:background="#27C6DB"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/number6"
            android:layout_above="@+id/number9"
            android:layout_alignLeft="@+id/number3"
            android:layout_alignStart="@+id/number3"
            android:background="#27C6DB"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/number7"
            android:layout_below="@+id/number5"
            android:layout_toLeftOf="@+id/number5"
            android:layout_toStartOf="@+id/number5"
            android:background="#27C6DB"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/number8"
            android:layout_above="@+id/number0"
            android:layout_alignLeft="@+id/number0"
            android:layout_alignStart="@+id/number0"
            android:background="#27C6DB"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/number9"
            android:layout_alignTop="@+id/number8"
            android:layout_alignLeft="@+id/number6"
            android:layout_alignStart="@+id/number6"
            android:background="#27C6DB"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/number0"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/number7"
            android:layout_toEndOf="@+id/number7"
            android:background="#27C6DB"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:id="@+id/done"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/number0"
            android:layout_alignRight="@+id/number9"
            android:layout_alignEnd="@+id/number9"
            android:background="#27C6DB"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emptyButton"
            android:layout_below="@+id/number7"
            android:layout_toLeftOf="@+id/number8"
            android:layout_toStartOf="@+id/number8"
            android:background="#27C6DB"
            />
    </RelativeLayout>
</LinearLayout>
